name: Supabase Migrations

on:
  push:
    branches:
      - main # Or the branch where you push your migration files

jobs:
  deploy-migrations:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20' # Use your project's Node.js version

      - name: Install Supabase CLI
        run: |
          curl -sL https://raw.githubusercontent.com/supabase/cli/main/install.sh | sh
        
      - name: Deploy Supabase Migrations
        run: supabase migrations deploy
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
          SUPABASE_PROJECT_REF: ${{ secrets.SUPABASE_PROJECT_REF }}
